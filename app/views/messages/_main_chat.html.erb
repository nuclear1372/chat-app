<div class="main_chat">
  <div class="main_header">
    <div class="header_left">
      <div class="header_title">
        <%= @room.name %>
      </div>
    </div>
    <div class="header_right">  
      <div class="header_button">
        <a href="#">チャットを終了する</a>
      </div>
    </div>  
  </div>
  <div class="chat_space">
    <%= render partial: 'message', collection: @messages %>
  </div>
  <div class="main_footer">
    <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
      <div class="message_form">
        <div class="form_input">
          <%= f.text_field :content, class: 'content_form', placeholder: 'type a message' %>
          <label class="form_image">
            <span class="image_file">画像</span>
            <%= f.file_field :image, class: 'hidden'%>
          </label>
        </div>
        <%= f.submit '送信', class: 'submit_button' %>
      </div>
    <% end %>  
  </div>
</div>